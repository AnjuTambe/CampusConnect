@model CampusConnect.WebSite.ViewComponents.JobListingViewModel

@* Search Form: Includes keyword search and location filter *@
@* The form should submit to the page hosting this component (e.g., Dashboard) *@

@* Display job cards if any results are available *@
<div class="row row-cols-1"> @* Changed to 1 column for a pane view, adjust as needed *@
    @if (Model.JobListings != null && Model.JobListings.Any())
    {
        foreach (var job in Model.JobListings)
        {
            <div class="col-12 mb-2"> @* Further reduced bottom margin for the card container *@
                <a asp-page="/Dashboard"
                   asp-page-handler="ShowJobDetails"
                   asp-route-id="@job.Id"
                   asp-route-searchTerm="@Model.SearchTerm"
                   asp-route-locationFilter="@Model.LocationFilter"
                   asp-route-employerNameFilter="@Model.EmployerNameFilter"
                   asp-route-currentPage="@Model.CurrentPage"
                   class="text-decoration-none text-dark">
                    <div class="dashboard-card h-100 shadow-sm job-card-link"> @* Added job-card-link for potential styling *@
                        <div class="card-body d-flex flex-column py-1 px-2"> @* Further reduced padding *@
                            <h6 class="card-title mb-1 nav-heading-custom-bold">@job.Title</h6> @* Changed to h6, applied custom bold, kept mb-1 *@
                            <small class="text-muted mb-1 d-block">@job.EmployerName</small> @* Ensured small, mb-1, and d-block for consistency *@
                            <small class="text-muted mb-1 d-block">Type: @job.JobType</small>
                            @* Description paragraph removed *@
                            <small class="text-muted mb-1 d-block"> @* Ensured small, mb-1, d-block *@
                                Posted: @job.DatePosted.ToString("MMM dd, yyyy")
                            </small>
                            <small class="text-muted mb-0 d-block"> @* Ensured small, mb-0, d-block *@
                                <i class="fas fa-map-marker-alt location-icon-spacing"></i>@job.Location
                            </small>
                        </div>
                        @* Footer with Apply/Edit/Delete buttons removed from here *@
                        @* If an Apply button is still desired on the card, it can be re-added here,
                           but Edit/Delete are now in the details pane on Dashboard.cshtml *@
                    </div>
                </a>
            </div>
        }
    }
    else
    {
        <div class="col">
            <p>No job listings found matching your criteria.</p>
        </div>
    }
</div>

@* Pagination Controls *@
@if (Model.TotalPages > 1)
{
    <nav aria-label="Job listings navigation">
        <ul class="pagination pagination-sm justify-content-center mt-3"> @* Made pagination smaller *@
            @{
                var prevPage = Model.CurrentPage - 1;
                var nextPage = Model.CurrentPage + 1;
                var routeData = new Dictionary<string, string?>
                {
                    { "handler", "ShowJobs" }, // Changed to ShowJobs handler
                    { "SearchTerm", Model.SearchTerm },
                    { "LocationFilter", Model.LocationFilter },
                    { "employerNameFilter", Model.EmployerNameFilter }
                    // currentPage will be added per link
                };
            }
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link" asp-page="/Dashboard"
                   asp-all-route-data="@(new Dictionary<string, string?>(routeData) { { "currentPage", prevPage.ToString() } })">Prev</a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")"
                    aria-current="@(i == Model.CurrentPage ? "page" : null)">
                    @if (i == Model.CurrentPage)
                    {
                        <span class="page-link">@i</span>
                    }
                    else
                    {
                        <a class="page-link" asp-page="/Dashboard"
                           asp-all-route-data="@(new Dictionary<string, string?>(routeData) { { "currentPage", i.ToString() } })">@i</a>
                    }
                </li>
            }
            <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="/Dashboard"
                   asp-all-route-data="@(new Dictionary<string, string?>(routeData) { { "currentPage", nextPage.ToString() } })">Next</a>
            </li>
        </ul>
    </nav>
}