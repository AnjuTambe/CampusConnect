@page
@model CampusConnect.WebSite.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["UseFluidContainer"] = true; // Signal to _Layout.cshtml to use a wider container
}

<div class="container py-5">
    <div class="row">
        @* 1. Left Panel (Main Navigation) *@
        <div class="col-md-3 col-lg-2 mb-4">
            <div class="p-3 bg-light rounded shadow-sm">
                <h5 class="fw-bold text-primary mb-3">Navigation</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link px-2 py-2 mb-1 rounded @(Model.ActiveView == "Jobs" ? "active bg-primary text-white" : "text-dark video-hover")" asp-page="/Dashboard" asp-page-handler="ShowJobs">
                            <i class="fas fa-briefcase me-2"></i> Jobs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-2 py-2 mb-1 rounded @(Model.ActiveView == "Employers" ? "active bg-primary text-white" : "text-dark video-hover")" asp-page="/Dashboard" asp-page-handler="ShowEmployers">
                            <i class="fas fa-building me-2"></i> Employers
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        @* 2. Right Panel (Contains Filters, List, Details) *@
        <div class="col-md-9 col-lg-10">
            <div class="row g-0">
                @if (Model.ActiveView == "Jobs")
                {
                    @await Html.PartialAsync("Shared/_JobsPanel", Model)
                }
                else if (Model.ActiveView == "Employers")
                {
                    @await Html.PartialAsync("Shared/_EmployersPanel", Model)
                }
            </div>
        </div>
    </div>
</div>